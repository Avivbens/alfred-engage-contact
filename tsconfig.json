{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "Node",
        "lib": ["es2016", "esnext", "dom"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "exclude": ["dist"]
}
